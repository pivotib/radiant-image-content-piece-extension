<% if @content_image.new_record? %>
  <h1>New link</h1>
<% else %>
  <h1>Edit: <%= @content_image.name %></h1>
<% end %>

<% form_tag do %>
  <div class="form-area">
    <div  id="link_form_area">
      <p class="">
        <label for="content_image_name">Name</label>
        <%= @content_image.name %>
      </p>
            
      <p class="">
        <label for="content_image_slug">Slug</label>
        <%= @content_image.slug %>
      </p>

      <p class="">
        <label for="content_image_small_image">Small Image</label>
        <p>Small: <%= image_tag @content_image.content_image.url(:small) %></p>
        <p>Large: <%= image_tag @content_image.content_image.url(:large) %></p>
      </p>

      <p class="">
        <label for="content_image_alt">Alt</label>
        <%= @content_image.alt %>
      </p>

      <p class="">
        <label for="content_image_link">Link</label>
        <%= @content_image.link %>
      </p>

      <p class="">
        <label for="content_image_link_popout">Link Popout</label>
        <%= @content_image.link_popout %>
      </p>

      <p class="content">
        <label for="content_image_description">Description</label><br />
        <%= @content_image.description %>
      </p>

       <span class="clear">&nbsp;</span>
    </div>
  </div>


<% end %>
