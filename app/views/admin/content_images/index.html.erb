<p><%= link_to "New Image", {:action => :new} %></p>
<table class="index">
    <tr>
      <th>Image</th>
      <th>Modify</th>
    </tr>
    <% @content_images.each do |content_image_item| %>
      <tr class="node level-1">
        <td class="layout">
          <%= image_tag content_image_item.content_image.url(:thumbnail) %>
          <%= link_to content_image_item.name, edit_admin_content_image_path(:id => content_image_item.id) %>
        </td>
        <td class="remove">
          <%= link_to image('remove', :alt => 'Remove link'), admin_content_image_path(:id => content_image_item.id), :method => :delete, :confirm => "are you sure?" %>
        </td>
      </tr>
    <% end %>
</table>